<h1>New article</h1>

<%if @article && @article.errors.any?%>
    <%@article.errors.full_messages.each do |msg|%>
        <ul><li><%=msg%></li></ul>
    <%end%>
<%end%>

<%= form_for :article, url: articles_path do |f|%>
    <p>
        <%= f.label :title%>
        <%= f.text_field :title%>
    </p>
    <p>
        <%= f.label :text%>
        <%= f.text_area :text%>
    </p>
    <p>
        <%= f.submit %>
    </p>
<%end%>


